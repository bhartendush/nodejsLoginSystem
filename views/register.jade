extends layout

block content
 h2.page-header Register
 p Please register using the form below
 div.errors
  if errors
   each error, i in errors
    div.alert.alert-danger #{error.msg}
 form(method='post', action='/users/register', enctype='multipart/form-data')
  .form-group
   label Name
   input.form-control(name='name', type='text', placeholder='Enter name')
   .form-group
   label Email
   input.form-control(name='email', type='text', placeholder='Enter Email')
   .form-group
   label User Name
   input.form-control(name='username', type='text', placeholder='Username')
   .form-group
   label Password
   input.form-control(name='password', type='text', placeholder='Enter Passowrd')
   .form-group
   label Confirm Password
   input.form-control(name='password2', type='text', placeholder='Confirm Passowrd')
   .form-group
   label Profile Image
   input.form-control(name='profileimage', type='file')
   input.btn.btn-primary(type='submit', name='submit', value='Register')